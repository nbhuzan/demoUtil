<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/btn_white_grey"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:paddingLeft="@dimen/x14"
              android:paddingRight="@dimen/x14">

    <TextView
        android:id="@+id/textview_item_dialog_menu_msg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/y48"
        android:layout_weight="1"
        android:paddingTop="@dimen/y5"
        android:paddingBottom="@dimen/y5"
        android:gravity="center_vertical"
        android:textSize="@dimen/sp16"
        android:paddingRight="@dimen/y10"
        android:textColor="@android:color/black"/>

    <CheckBox
        android:id="@+id/checkbox_item_dialog_menu_select"
        style="@style/select"
        android:clickable="false"
        android:layout_width="@dimen/x24"
        android:layout_height="@dimen/x24"/>
</LinearLayout>