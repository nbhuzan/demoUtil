<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@android:color/white"
              android:minWidth="@dimen/x300"
              android:orientation="vertical">

    <TextView
        android:id="@+id/textview_widget_alertdialog_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x48"
        android:background="@drawable/bg_border_b_white_grey"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        tools:text="标题"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_border_b_white_grey"
        android:minHeight="@dimen/y100">

        <TextView
            android:id="@+id/textview_widget_alertdialog_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:ellipsize="end"
            android:maxLines="4"
            android:minHeight="@dimen/y100"
            android:padding="@dimen/x20"/>

        <EditText
            android:id="@+id/edittext_widget_alertdialog_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:ellipsize="end"
            android:hint="@string/input"
            android:inputType="number"
            android:maxLines="4"
            android:minHeight="@dimen/y100"
            android:padding="@dimen/x20"
            android:visibility="visible"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x48"
        android:layout_marginTop="@dimen/y1"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_widget_alertdialog_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_white_grey"
            android:text="取消"
            android:textColor="@color/btn_black_blue"/>

        <View
            android:layout_width="@dimen/x1"
            android:layout_height="match_parent"
            android:background="@color/gray"
            android:layout_marginTop="@dimen/x10"
            android:layout_marginBottom="@dimen/x10"/>

        <Button
            android:id="@+id/button_widget_alertdialog_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_white_grey"
            android:text="确定"
            android:textColor="@color/btn_black_blue"/>

    </LinearLayout>
</LinearLayout>