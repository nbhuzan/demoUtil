<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="dialogNormal" parent="@android:style/Theme.Dialog">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="Fingerprint" parent="dialogNormal">

        <!-- 遮罩层 -->
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="dialogPromptAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/in_scale</item>
        <item name="android:windowExitAnimation">@anim/out_scale</item>
    </style>

    <!--号牌号码输入弹出框输入样式-->
    <style name="carnum_editview">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">@dimen/x40</item>
        <item name="android:layout_height">@dimen/y40</item>
        <item name="android:layout_weight">1</item>
        <item name="android:ems">1</item>
        <item name="android:background">@drawable/btn_keyboard_key</item>
    </style>
    <!--号牌号码dialog进出样式-->
    <style name="carNumAnim" parent="android:Animation" mce_bogus="1">
        <item name="android:windowEnterAnimation">@anim/in_bottom</item>
        <item name="android:windowExitAnimation">@anim/out_bottom</item>
    </style>

    <style name="select" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/cb_select</item>
    </style>

    <style name="searchAnim" parent="android:Animation" mce_bogus="1">
        <item name="android:windowEnterAnimation">@anim/search_dialog_edit_in</item>
        <item name="android:windowExitAnimation">@anim/search_dialog_edit_out</item>
    </style>
</resources>